		<column name="name" caption="Jméno" visible="true" editable="false" required="true" width="0" />
		<column name="type" caption="Typ" visible="true" editable="false" required="true" width="0" />
		<column name="value" caption="Hodnota" visible="true" editable="false" required="true" width="0" />
		<column name="ts" caption="Změněno" visible="true" editable="false" required="false" width="0" />
	</columns>
</table>
