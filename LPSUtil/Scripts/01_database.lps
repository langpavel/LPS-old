function check_strana(NEW, Allow_0=false, error="Strana záznamu není nastavena")
{
	if(NEW.strana is null and not Allow_0)
		throw error;
	if(strana is null)
		NEW.strana = 0;
	if(not(NEW.strana == -1 or NEW.strana == 1
			or (Allow_0 and NEW.strana == 0)))
		throw error;
};

